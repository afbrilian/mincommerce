# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mincommerce
DB_USER=mincommerce_user
DB_PASSWORD=mincommerce_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Queue Configuration
QUEUE_PROVIDER=bull
# Options: bull, kafka, sqs

# Kafka Configuration (when using Kafka)
KAFKA_CLIENT_ID=mincommerce-api
KAFKA_BROKERS=localhost:9092
KAFKA_SSL=false
KAFKA_USERNAME=
KAFKA_PASSWORD=

# AWS SQS Configuration (when using SQS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Flash Sale Configuration
FLASH_SALE_START_TIME=2024-01-01T10:00:00Z
FLASH_SALE_END_TIME=2024-01-01T12:00:00Z
FLASH_SALE_PRODUCT_ID=your-product-id
